{
  "name": "ts-essentials-functions",
  "version": "1.0.3",
  "author": "maxgfr",
  "license": "MIT",
  "description": "A set of essentials functions with zero-dependencies",
  "main": "./build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxgfr/ts-essentials-functions.git"
  },
  "bugs": {
    "url": "https://github.com/maxgfr/ts-essentials-functions/issues"
  },
  "homepage": "https://github.com/maxgfr/ts-essentials-functions#readme",
  "files": [
    "build"
  ],
  "keywords": [
    "ts",
    "typescript",
    "essentials",
    "functions",
    "zero-dependencies"
  ],
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon",
    "develop": "node -r @swc-node/register ./src/index.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "clean": "rimraf build",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "build:swc": "swc ./src -d build",
    "build:swc:watch": "swc ./src -d build -w",
    "lint": "eslint ./src",
    "format": "prettier --write './src/**/*.{ts,js,json}'",
    "format:check": "prettier --check './src/**/*.{ts,js,json}'",
    "typecheck": "tsc --noEmit",
    "release": "semantic-release"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.5",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@swc-node/register": "1.11.1",
    "@swc/cli": "0.8.0",
    "@swc/core": "1.15.11",
    "@swc/jest": "0.2.39",
    "@types/jest": "30.0.0",
    "@types/node": "25.2.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.12.2",
    "jest": "30.2.0",
    "nodemon": "3.1.11",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "semantic-release": "25.0.3",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
